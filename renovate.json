{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "description": "Update Chart.yaml",
      "fileMatch": [
        "^Chart\\.yaml$"
      ],
      "matchStrings": [
        "# renovate: packageName=(?<packageName>.+?)\\s[a-z]*[vV]ersion: (?<currentValue>.+?)([-]?)(\\d{2})\\s"
      ]
    }
  ],
  "dependencyDashboard": true
}
