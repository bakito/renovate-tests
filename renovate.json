{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Chart\\.yaml$"
      ],
      "matchStrings": [
        "appVersion: (?<currentValue>[^\\s]+)-(\\d{2})"
      ],
      "autoReplaceStringTemplate": "appVersion: {{{newValue}}}-00",
      "depNameTemplate": "redis",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "Chart\\.yaml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>[^\\s]+)(\\d{2})"
      ],
      "autoReplaceStringTemplate": "version: {{{newValue}}}00",
      "depNameTemplate": "redis",
      "datasourceTemplate": "docker"
    }
  ],
  "dependencyDashboard": true,
  "recreateWhen": "always"
}
